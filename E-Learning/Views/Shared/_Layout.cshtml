<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Web Học Trực Tuyến</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />

   
    <style>
        /* ======= Sidebar ======= */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 56px;
            left: 0;
            background-color: #262020;
            padding-top: 20px;
            transition: transform 0.3s ease-in-out;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

            .sidebar.hidden {
                transform: translateX(-250px);
            }

            .sidebar a {
                display: block;
                padding: 10px;
                color: #f0f3f6;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #39ba0e;
                }

        nav a:hover {
            background-color: #f0f0f0;
            border-radius: 4px;
        }

        /* ======= Content ======= */
        .content {
            margin-left: 250px;
            transition: margin-left 0.3s ease-in-out;
            padding: 20px;
            flex: 1;
        }

            .content.full {
                margin-left: 0;
            }

        /* ======= Navbar ======= */
        .navbar-custom {
            background-color: #000;
        }

            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand {
                color: rgb(255, 255, 255);
            }

                .navbar-custom .nav-link:hover {
                    color: #ddd;
                }

        /* ======= Toggle Button ======= */
        .toggle-btn {
            border: none;
            background: transparent;
            font-size: 24px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

            .toggle-btn.rotated {
                transform: rotate(180deg);
            }

        /* ======= Footer ======= */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        footer {
            background-color: #212529;
            color: rgb(96, 77, 138);
            text-align: center;
            padding: 15px;
        }

        .navbar .dropdown-menu {
            font-family: Arial, sans-serif;
            font-size: 14px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <button class="toggle-btn text-white me-3" id="toggleSidebar">☰</button>
            <a class="navbar-brand" href="/">📚 Web Học Trực Tuyến</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                    
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Lesson" asp-action="MyCourses">Khóa học của tôi</a>
                    </li>

                </ul>

                <ul class="navbar-nav ms-3">
                   
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="btn btn-primary" href="@Url.Action("ManageAccounts","ManageAccount", new { area = "Admin" })">
                                🔑 Quản lý tài khoản
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-area="Admin" asp-controller="Course" asp-action="Index">
                                🔑 Quản lý khoá học
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-area="Admin" asp-controller="Course" asp-action="ManageAll">
                                Quản lý nội dung khóa học
                            </a>
                        </li>
                    }
                  

                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>
    @RenderSection("Scripts", required: false)

    <!-- Sidebar -->
    <!-- Toggle Button -->
    

    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-light border-end p-3" style="width: 280px; min-height: 100vh; overflow-y: auto;">
           
        </nav>

        <!-- Main content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>



    <!-- Nội dung chính -->
    <div id="content" class="content">
        <div class="container mt-5 pt-4">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 Web Học Trực Tuyến. All rights reserved.</p>
    </footer>

