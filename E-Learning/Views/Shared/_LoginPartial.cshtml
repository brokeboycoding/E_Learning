@using Microsoft.AspNetCore.Identity
@using E_Learning.Models
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://img.lovepik.com/png/20231029/E-sports-game-orange-fox-logo-mascot-logo-sports-logos_397974_wh860.png" alt="Logo" style="width: 40px; height: auto;" />

        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            @if (SignInManager.IsSignedIn(User))
            {
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        Hello @UserManager.GetUserName(User)!
                    </a>
                </li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="dropdown-item btn btn-link text-dark border-0">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a></li>
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a></li>
            }
        </ul>
    </li>
</ul>
