@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<h2 class="mt-3">@ViewData["Title"]</h2>

<a asp-action="CreateAccount" class="btn btn-success mb-3">Tạo tài khoản</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Tên đăng nhập (MSSV hoặc Email)</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>

                <td>
                    @foreach (var role in ViewBag.UserRoles[user.Id])
                    {
                        <span class="badge bg-secondary">@role</span>
                    }
                </td>

                <td>
                    <a asp-action="DeleteAccount"
                       asp-route-id="@user.Id"
                       class="btn btn-danger"
                       onclick="return confirm('Bạn có chắc chắn muốn xóa tài khoản này? Nếu tài khoản có hồ sơ (giáo viên hoặc học sinh), hồ sơ đó cũng sẽ bị xóa.')">
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button type="button" class="btn btn-secondary mt-3" onclick="window.history.back();">Quay lại</button>
