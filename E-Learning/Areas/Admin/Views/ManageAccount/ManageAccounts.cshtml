@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<a asp-action="CreateAccount" class="btn btn-success mt-3">Tạo tài khoản</a>

<table class="table">
    <thead>
        <tr>
            <th>Tên đăng nhập (MSSV hoặc Email)</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>

                <!-- Hiển thị các vai trò của người dùng -->
                <td>
                    @foreach (var role in ViewBag.UserRoles[user.Id])
                    {
                        <span class="badge badge-dark" style="color: rgb(122, 17, 27);">@role</span>



                    }
                </td>

                <td>
                    <a asp-action="DeleteAccount" asp-route-id="@user.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<button type="button" class="btn btn-secondary" onclick="window.history.back();">Quay lại</button>
