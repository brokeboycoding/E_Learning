@model IEnumerable<Course>

<h2>Danh sách khóa học</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Chưa có khóa học nào.</div>
}
else
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-6">
                <div class="card mb-3 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-1">@course.Name</h5>
                            <p class="text-muted mb-0">Số module: @course.Modules?.Count() </p>
                        </div>
                        <a asp-action="Manage" asp-route-courseId="@course.Id" class="btn btn-outline-primary btn-sm">
                            Quản lý
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
