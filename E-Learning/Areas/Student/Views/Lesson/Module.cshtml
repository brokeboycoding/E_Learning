@model CourseViewModel

@{
    ViewData["Title"] = "Xem Module";
}

<div class="container">
    <h1>@ViewBag.ModuleTitle</h1>
   @* Hiển thị nút Đăng ký khóa học nếu chưa đăng ký *@
    @if (!(ViewBag.IsEnrolled ?? false))
    {
        <form asp-controller="Lesson"
              asp-action="Enroll"
              asp-route-courseId="@Model.CurrentCourse.Id"
              method="post" class="mb-4">
            <button type="submit" class="btn btn-primary">
                🔒 Đăng ký khóa học để bắt đầu học
            </button>
        </form>
        <div class="alert alert-warning">
            Vui lòng đăng ký để xem nội dung khóa học.
        </div>
    }
    else
    {
       
    
    <div class="row">
        <div class="col-md-8">
            <h4>Bài học trong module</h4>
            <div class="list-group">
                @foreach (var lesson in Model.Modules.SelectMany(m => m.Lessons))
                {
                    <a href="@Url.Action("Module", "Lesson", new { lessonId = lesson.Id })"
                       class="list-group-item list-group-item-action @((Model.CurrentLesson?.Id == lesson.Id) ? "active" : "")">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="mb-1">@lesson.Title</h5>
                                <p class="mb-1">@lesson.Description</p>
                            </div>
                            <div class="align-self-center">
                                @if (Model.CurrentLesson?.Id == lesson.Id)
                                {
                                    <span class="badge badge-primary">Đang học</span>
                                }
                                else if (((List<int>)ViewBag.CompletedLessons).Contains(lesson.Id))
                                {
                                    <span class="badge bg-success">Đã hoàn thành</span>
                                }

                                else
                                {
                                    <span class="badge badge-secondary">Chưa hoàn thành</span>
                                }
                            </div>
                        </div>
                    </a>
                }
            </div>

            @if (Model.CurrentLesson != null)
            {

                <hr />
                <h3>@Model.CurrentLesson.Title</h3>
                <p>@Model.CurrentLesson.Description</p>
                @if (!string.IsNullOrEmpty(Model.CurrentLesson.VideoUrl))
                {
                    <div class="mb-4">
                        <video id="player" playsinline controls>
                            <source src="@Model.CurrentLesson.VideoUrl" type="video/mp4" />
                        </video>
                    </div>
                }
                    <h4>Ghi chú của bạn</h4>
                    <form asp-action="AddNote" method="post">
                        <input type="hidden" asp-for="NewNote.LessonId" />

                        <div class="mb-2">
                            <label asp-for="NewNote.Timestamp">Thời điểm (giây)</label>
                            <input type="text" class="form-control" asp-for="NewNote.Timestamp" placeholder="Ví dụ: 120.5 hoặc 02:01" required />
                            <span asp-validation-for="NewNote.Timestamp" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="NewNote.Content">Nội dung</label>
                            <textarea class="form-control" asp-for="NewNote.Content"
                                      placeholder="Nhập ghi chú..." required></textarea>
                            <span asp-validation-for="NewNote.Content" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Lưu ghi chú</button>
                    </form>

                    @foreach (var note in Model.Notes)
                    {
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="me-3">
                                    <div class="fw-bold">@note.Content</div>
                                    <small class="text-muted">
                                        <i class="fas fa-clock"></i> @note.Timestamp.ToString() giây
                                    </small>
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-outline-danger"
                                            onclick="deleteNote(@note.Id)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </li>
                    }

                <div class="card-footer bg-transparent border-0">
                    <a asp-area="Student" asp-controller="Discussion" asp-action="Index" asp-route-lessonId="@Model.CurrentLesson?.Id" class="btn btn-outline-primary w-100">Thảo luận</a>
                </div>




                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }

                <!-- Nút đánh dấu hoàn thành -->
                <form asp-area="Student"
                      asp-controller="Lesson"
                      asp-action="MarkComplete"
                      method="post" class="mt-3">

                    <input type="hidden" name="lessonId" value="@Model.CurrentLesson?.Id" />

                    <button type="submit" class="btn btn-success">
                        ✓ Đánh dấu hoàn thành
                    </button>
                </form>

            }
        </div>
        
    </div>
    }
</div>

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.plyr.io/3.7.8/plyr.polyfilled.js"></script>
    <script src="~/js/video.js"></script>
   

}



<style>
    .plyr {
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        max-height: 500px;
    }
</style>




