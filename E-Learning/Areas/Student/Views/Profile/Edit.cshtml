@model E_Learning.Models.Student

@{
    ViewData["Title"] = "Chỉnh sửa Hồ sơ Sinh viên";
}

<h2>✏️ Chỉnh sửa Hồ sơ Sinh viên</h2>

<form asp-action="Edit" method="post">
    @* Hidden field Id để gửi về server *@
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="MSSV" class="form-label"></label>
        <input asp-for="MSSV" class="form-control" />
        <span asp-validation-for="MSSV" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

   

    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    
            <a asp-area="Student" asp-controller="Profile" asp-action="Index" class="btn btn-secondary">Quay lại</a>
     
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}