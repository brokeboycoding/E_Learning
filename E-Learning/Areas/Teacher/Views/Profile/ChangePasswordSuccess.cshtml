@{
    ViewData["Title"] = "Đổi mật khẩu thành công";
}

<h2>Đổi mật khẩu thành công</h2>
<p>Bạn đã đổi mật khẩu thành công. Vui lòng đăng nhập lại.</p>

<form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
    <button id="logout"
            type="submit"
            class="btn btn-primary px-4 py-2 rounded shadow-sm"
            style="font-weight: 600; font-size: 1.1rem;">
        Đăng nhập lại
    </button>
</form>
